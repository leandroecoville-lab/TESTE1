{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "idea_brief.v1",
  "type": "object",
  "required": [
    "schema_version",
    "trace_id",
    "idea_title",
    "problem",
    "target_users",
    "desired_outcomes",
    "constraints"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "trace_id": {
      "type": "string"
    },
    "idea_title": {
      "type": "string"
    },
    "problem": {
      "type": "string"
    },
    "target_users": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "desired_outcomes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "time_to_mvp_days": {
          "type": "integer"
        },
        "budget": {
          "type": "string"
        },
        "channels": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "compliance": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}