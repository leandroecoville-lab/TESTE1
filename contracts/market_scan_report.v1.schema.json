{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "market_scan_report.v1",
  "type": "object",
  "required": [
    "schema_version",
    "trace_id",
    "sources",
    "signals",
    "risks",
    "verdict"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "trace_id": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "ref": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "signals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "signal": {
            "type": "string"
          },
          "strength": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          },
          "mitigation": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "verdict": {
      "type": "string"
    }
  },
  "additionalProperties": true
}