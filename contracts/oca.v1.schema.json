{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Operational Change Artifact (OCA) v1",
  "type": "object",
  "required": [
    "oca_id",
    "pack_target",
    "type",
    "summary",
    "why",
    "changes",
    "risk",
    "actors",
    "trace"
  ],
  "properties": {
    "oca_id": {
      "type": "string"
    },
    "pack_target": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "bugfix",
        "refactor",
        "security",
        "feature",
        "docs",
        "ops"
      ]
    },
    "summary": {
      "type": "string"
    },
    "why": {
      "type": "string"
    },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "change_type"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "change_type": {
            "type": "string",
            "enum": [
              "add",
              "modify",
              "delete"
            ]
          },
          "notes": {
            "type": "string"
          },
          "patch": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "tests_added_or_updated": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "risk": {
      "type": "object",
      "required": [
        "severity",
        "blast_radius",
        "rollback_plan"
      ],
      "properties": {
        "severity": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ]
        },
        "blast_radius": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rollback_plan": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "actors": {
      "type": "object",
      "required": [
        "author"
      ],
      "properties": {
        "author": {
          "type": "string"
        },
        "reviewer": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "trace": {
      "type": "object",
      "required": [
        "trace_id"
      ],
      "properties": {
        "trace_id": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}